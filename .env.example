# Example environment variables file
# Copy this to .env and fill in your actual values
# NEVER commit .env file to version control

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database?retryWrites=true&w=majority

# MongoDB Database Name
MONGODB_DATABASE=springbootapplication

# JWT Secret Key (use a long, random, secure value)
JWT_SECRET=your-secure-jwt-secret-key-here-make-it-long-and-random

# JWT Expiration (milliseconds - default 24 hours)
JWT_EXPIRATION=86400000

# Server Port
SERVER_PORT=8081
